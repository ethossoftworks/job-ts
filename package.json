{
    "name": "@ethossoftworks/job",
    "author": {
        "name": "Ryan Mitchener"
    },
    "license": "MIT",
    "version": "1.0.0",
    "description": "A simple library for cancellable asynchronous tasks",
    "keywords": [
        "cancellable",
        "job",
        "coroutine"
    ],
    "repository": {
        "url": "https://github.com/ethossoftworks/job-ts.git"
    },
    "main": "job.core.js",
    "types": "types/index.d.ts",
    "files": [
        "types/",
        "*.js",
        "!*.js.map",
        "!*.test.d.ts"
    ],
    "dependencies": {},
    "peerDependencies": {
        "@ethossoftworks/outcome": "^2.0.0"
    },
    "devDependencies": {
        "@ethossoftworks/outcome": "^2.1.0",
        "@ethossoftworks/knock-on-wood": "^2.0.0",
        "copy-webpack-plugin": "^7.0.0",
        "prettier": "^2.1.2",
        "typescript": "^4.1.2",
        "webpack": "^5.16.0",
        "webpack-cli": "^4.2.0",
        "source-map-loader": "^2.0.0"
    },
    "scripts": {
        "format": "npx prettier --write --loglevel warn src/**/*.ts*",
        "ts-compile": "npx tsc -b src/",
        "build": "yarn format && yarn ts-compile && npx webpack --env prod",
        "build-dev": "yarn format && yarn ts-compile && npx webpack --env dev",
        "build-test": "yarn format && npx tsc -b src/tsconfig.test.json && npx webpack --env test",
        "build-pack": "yarn build-dev && cd ./build/dist && npm pack",
        "build-publish": "yarn build && cd ./build/dist && npm publish --access public",
        "start-bundler": "npx webpack --watch",
        "start-ts": "npx tsc -b src/ -w",
        "bundle-inspect": "yarn build && npx source-map-explorer build/dist/job.core.js",
        "test": "yarn build-test && node build/dist/job.test.js",
        "test-inspect": "yarn build-test && node --inspect-brk build/dist/job.test.js"
    },
    "prettier": {
        "endOfLine": "lf",
        "tabWidth": 4,
        "semi": false,
        "printWidth": 120,
        "useTabs": false
    }
}